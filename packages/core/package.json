    },
    "homepage": "https://github.com/N0ts/MCPLink#readme",
    "bugs": {
        "url": "https://github.com/N0ts/MCPLink/issues"
    },
    "author": "N0ts",
    "publishConfig": {
        "access": "public"
    }
